root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ak]
indent_size = 2
max_line_length = 80

[*.rs]
indent_size = 2
max_line_length = 80

[*.hs]
indent_size = 2
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 80
